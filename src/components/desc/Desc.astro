<style>
  .desc {
    display: grid;
    grid-column: span 2;
    grid-template-columns: subgrid;
    border-bottom: 1px solid var(--sl-color-gray-5);
    margin: 0;
    padding-top: calc(var(--sl-content-gap-y) * 0.35);
    padding-bottom: calc(var(--sl-content-gap-y) * 0.35);
  }

  .desc-content {
    margin: 0;
  }
</style>

<style is:global>
  .desc-item .revision-tag {
    display: block;
  }
</style>
